{
  "name": "@teledeveloperz/twa-sdk",
  "version": "1.0.0",
  "description": "An advanced SDK for Telegram Web Apps (TWA) built in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "telegram",
    "web",
    "apps",
    "sdk",
    "twa"
  ],
  "author": "TeleDeveloperz",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.0",
    "typescript": "^4.5.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
